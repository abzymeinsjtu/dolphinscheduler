<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.apache.dolphinscheduler.dao.mapper.v3.ProcessDefinitionV3Mapper">
    <sql id="baseSql">
        id, code, name, version, release_state, project_code, user_id, description,
        global_params, flag, locations, warning_group_id, create_time, timeout, update_time, execution_type
    </sql>
    <select id="queryProcessDefinitionByCode" resultType="org.apache.dolphinscheduler.dao.entity.ProcessDefinition">
        select
        <include refid="baseSql"/>
        from t_ds_process_definition
        where code = #{code}
    </select>
    <select id="listProcessDefinitions" resultType="org.apache.dolphinscheduler.dao.entity.ProcessDefinition">
        SELECT
        <include refid="baseSql"/>
        FROM t_ds_process_definition
        where project_code = #{projectCode}
        AND user_id = #{userId}
        <if test=" searchVal != null and searchVal != ''">
            AND (
            name like concat('%', #{searchVal}, '%') OR description like concat('%', #{searchVal}, '%')
            )
        </if>
        <if test="offset != null ">
            and id > #{offset}
        </if>
        order by id
        limit #{maxResults}
    </select>
    <select id="countProcessDefinitions" resultType="java.lang.Integer">
        select count(*)
        from t_ds_process_definition
        where project_code = #{projectCode}
        AND user_id = #{userId}
        <if test="searchVal != null and searchVal != ''">
            <bind name="searchValPat" value="'%' + searchVal + '%'"/>
            AND (
            name like concat('%', #{searchVal}, '%') OR description like concat('%', #{searchVal}, '%')
            )
        </if>
    </select>
</mapper>
